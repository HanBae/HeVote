extends base/layout

block content
    .container
        if (!vote)
            p 현재 진행 중인 투표가 없습니다!
        else
            .list-group
                each val in vote
                    -voteIsPrivate = val[5] ? 'private' : 'public'
                    -voteHref='/' + voteIsPrivate + '/' + val[6]
                    a.list-group-item.list-group-item-action.flex-column.align-items-start(
                        href=voteHref
                    )
                        .d-flex.w-100.justify-content-between
                            h5.mb-1 #{val[0]}
                            small
                                -voteDate = new Date(val[3] * 1000).toLocaleString() + " ~ " + new Date(val[4] * 1000).toLocaleString();
                                | 기간 : #{voteDate}
                        p.mb-1
                            h5
                                case val[2]
                                    when '0': b.text-muted 대기
                                    when '1': b.text-primary 진행 중
                                    when '2': b.text-success 일시중지
                                    when '3': b.text-danger 종료
                                    default: b.text-danger 오류
                            | #{val[1]}
